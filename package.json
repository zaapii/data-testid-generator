{
  "name": "click-testid-generator",
  "displayName": "click-testid-generator",
  "description": "data-testid automatic generator for Vue components",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addTestId",
        "title": "Add data-testid"
      }
    ],
    "keybindings": [
      {
        "command": "extension.addTestId",
        "key": "ctrl+shift+z",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.addTestId",
          "when": "editorTextFocus && !editorReadonly",
          "group": "navigation"
        }
      ]
    }
  },
  "activationEvents": [
    "onCommand:extension.addTestId"
  ],
  "publisher": "Imanol-Click",
  "repository": {
    "type": "git",
    "url": "https://github.com/zaapii/data-testid-generator.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
